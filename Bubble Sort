def bubble_sort (arr):
    n = len(arr)
    swaped = True
    while swaped:
        swaped = False
        for i in range(n-1):
            if arr[i] > arr[i+1]:
                arr[i], arr[i + 1]= arr[i+1], arr[i]
                swaped = True
            
#Example           
arr = [2,4,6,1,3,5]
print ("given array:",arr)
bubble_sort (arr)
print("sorted array:",arr)
