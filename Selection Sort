def selection_sort(arr):
    n = len(arr)
    
    for i in range(n-1):
        max_idx = i
        
        for j in range(i+1, n):
            if arr[j] > arr[max_idx]:
                max_idx = j
        
        arr[i], arr[max_idx] = arr[max_idx], arr[i]
    
    return arr

# Example usage:
my_array = [5, 2, 8, 1, 9]
sorted_array = selection_sort(my_array)
print(sorted_array)
